{% extends('::admin.html.twig') %}

{% block body %}

	<div class="row-fluid">
		<div class="span12">

	        <h1 class="pull-left">{% trans %}Field Manager{% endtrans %}</h1>

		    <a href="{{ path('fields') }}" class="button btn-cancel pull-right"><i class="admin-icon-left-open-1"></i> {% trans %}Back{% endtrans %}</a>
		    <div class="clear h20"></div>

			{% if field.id != 0 %}
				<form class="form-horizontal" action="{{path('fields_edit', {'id':field.id})}}" method="post" {{ form_enctype(form) }}>
			{% else %}
				<form class="form-horizontal" action="{{path('fields_new')}}" method="post" {{ form_enctype(form) }}>
			{% endif %}
				<div class="span8">
					{{ form_errors(form) }}

					<div class="control-group">
						<div class="control-label">
							{{ form_label(form.title) }}
						</div>
						<div class="controls">
							{{ form_widget(form.title) }}
							{{ form_errors(form.title) }}
						</div>
					</div>
					<div class="control-group">
						<div class="control-label">
							{{ form_label(form.name) }}
						</div>
						<div class="controls">
							{{ form_widget(form.name) }}
							{{ form_errors(form.name) }}
						</div>
					</div>
					<div class="control-group">
						<div class="control-label">
							{{ form_label(form.published) }}
						</div>
						<div class="controls inline_elements">
							{{ form_widget(form.published) }}
							{{ form_errors(form.published) }}
						</div>
					</div>
					<div class="control-group">
						<div class="control-label">
							{{ form_label(form.contentType) }}
						</div>
						<div class="controls inline_elements">
							{{ form_widget(form.contentType, {'attr' : {'class' : 'datepicker'}}) }}
							{{ form_errors(form.contentType) }}
						</div>
					</div>

					
				</div>
				<div class="span4">
					{{ fieldsOptions|raw }}
					{% if fieldtype is defined %}
						<input type="hidden" name="fieldtype" value="{{fieldtype}}" />
					{% endif %}
				</div>
				<div class="clearfix"></div>
				<div class="form-actions">
					<a href="{{ path('fields') }}" class="button btn-cancel">{% trans %}Cancel{% endtrans %} <i class="admin-icon-cancel"></i></a>
                    <button type="submit" class="button btn-main">{% trans %}Validate{% endtrans %} <i class="admin-icon-ok"></i></button>
				</div>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>

{% endblock body %}

{% block javascripts %}
<script type="text/javascript">

</script>
{% endblock javascripts %}
