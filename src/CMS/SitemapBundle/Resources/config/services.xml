<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="cms_sitemap.example.class">CMS\SitemapBundle\Example</parameter>
    </parameters>
    -->
    <services>
        <service id="cms_menu.repository.menutaxonomy" class="Doctrine\ORM\EntityRepository" factory-service="Doctrine" factory-method="getRepository">
            <argument>CMSMenuBundle:MenuTaxonomy</argument>
        </service>
        <service id="cms_sitemap.repository.sitemap" class="Doctrine\ORM\EntityRepository" factory-service="Doctrine" factory-method="getRepository">
            <argument>CMSSitemapBundle:Sitemap</argument>
        </service>
        <service id="cms.twig.sitemap_exension" class="CMS\SitemapBundle\Twig\SitemapExtension">
            <argument type="service" id="cms_menu.repository.menutaxonomy" />
            <argument type="service" id="cms_sitemap.repository.sitemap" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>
