<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {{ metas|raw }}
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="HandheldFriendly" content="true">

        {% block stylesheets %}{% endblock %}
        {% stylesheets
        	'bundles/cmsadmin/css/bootstrap.min.css'
        	'bundles/cmsadmin/css/bootstrap-responsive.min.css'
        	'bundles/cmsfront/css/style.css'
            'bundles/cmsfront/css/social.css'
            'bundles/cmsadmin/css/jquery.maximage.min.css'
            %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	<div id="container">

    		<div id="header">
    			<div id="logo">
                    <a href="/fr"><img src="{{ asset('/bundles/cmsfront/images/logo.png') }} " /></a>
                </div>
                <div id="languages">
                    <ul class="horizontal">
                        <li><a href="#">FR</a></li>
                        <li><a href="#">EN</a></li>
                    </ul>
                </div>
    			<div id="menu">
                   {% if category.id is defined %}
                    {% render "CMSFrontBundle:Common:header" with{'cat_id': category.id, 'item_id': ''} %}
                   {% elseif content.id is defined %}
                    {% render "CMSFrontBundle:Common:header" with{'cat_id': '', 'item_id': content.id} %}
                   {% else %}
                    {% render "CMSFrontBundle:Common:header" with{'cat_id': '', 'item_id': ''} %}
                   {% endif %}
                </div>
    		</div>
            <div id="header-content">
                <h1>
                    {% if title is defined or title is null %}
                        {{ title }}
                    {% else %}
                        Christophe Corona
                    {% endif %}
                </h1>
            </div>
            <div id="content">
                <div class="row">
                {% block body %}
                {% endblock body %}
                {% if category.id is defined %}
                    {% render "CMSFrontBundle:Common:right" with{'cat_id': category.id, 'item_id': ''} %}
                   {% elseif content.id is defined %}
                    {% render "CMSFrontBundle:Common:right" with{'cat_id': '', 'item_id': content.id} %}
                   {% else %}
                    {% render "CMSFrontBundle:Common:right" with{'cat_id': '', 'item_id': ''} %}
                   {% endif %}
                </div>
                <div class="clearfix"></div>
            </div>

            <div id="content-footer">
                <div class="row">
                    <div class="col6">Accueil</div>
                    <div class="col6 pull-right"></div>
                </div>
                <div class="clearfix"></div>
            </div>
    	</div>
        <div id="filter">
            <div id="maximage">
                <img src="{{ asset('/bundles/cmsadmin/images/back_login.jpg') }}" />
                <img src="{{ asset('/bundles/cmsadmin/images/back_login2.jpg') }}" />
                <img src="{{ asset('/bundles/cmsadmin/images/back_login3.jpg') }}" />
                <img src="{{ asset('/bundles/cmsadmin/images/back_login4.jpg') }}" />
                <img src="{{ asset('/bundles/cmsadmin/images/back_login5.jpg') }}" />
            </div>
        </div>
{% javascripts
    'bundles/cmsadmin/js/jquery-1.9.1.min.js'
    'bundles/cmsadmin/js/bootstrap.min.js'
    'bundles/cmsadmin/js/jquery.cycle.all.min.js'
    'bundles/cmsadmin/js/jquery.maximage.min.js'

%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript" charset="utf-8">
    $(function(){
        // Trigger maximage
        jQuery('#maximage').maximage({
            cycleOptions: {
                timeout:5000
            }
        });
    });
</script>
    </body>
</html>
