{% extends "::admin.html.twig" %}
{% block title %}{% trans %}settings_general{% endtrans %}{% endblock %}
{% block titlesection %}{% trans %}settings_general{% endtrans %}{% endblock %}
{% block body %}
{% if app.session.flashbag.has('error') %}
	<div class="clear h20"></div>
    <div class="alert alert-error">
  		<a class="close" data-dismiss="alert" href="#">×</a>
  		<ul class="unstyled">
  		{% for message in app.session.flashbag.get('error') %}
        	<li>{{ message }}</li>
        {% endfor %}
    	</ul>
    </div>
{% elseif app.session.flashbag.has('success') %}
	<div class="clear h20"></div>
    <div class="alert alert-success">
  		<a class="close" data-dismiss="alert" href="#">×</a>
        <ul class="unstyled">
  		{% for message in app.session.flashbag.get('success') %}
        	<li>{{ message }}</li>
        {% endfor %}
    	</ul>
    </div>
{% endif %}
<h1 class="pull-left">{% trans %}settings_general{% endtrans %}</h1>
<div class="h20 clearfix"></div>
<form action="{{ path('settings') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
	{{ form_widget(form) }}
	<button type="submit" class="button btn-main">{% trans %}Validate{% endtrans %} <i class="admin-icon-ok"></i></button>
</form>
{% endblock body %}