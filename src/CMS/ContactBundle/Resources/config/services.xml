<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">



    <services>
        <service id="cms_contact.repository.contact" class="Doctrine\ORM\EntityRepository" factory-service="Doctrine" factory-method="getRepository">
            <argument>CMSContactBundle:Contact</argument>
        </service>
        <service id="cms.twig.messagecontact_extension" class="CMS\ContactBundle\Twig\MessagesContactExtension">
            <argument type="service" id="cms_contact.repository.contact" />
            <tag name="twig.extension" />
        </service>

    </services>
</container>
