<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Dashboard{% endblock %}</title>
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="HandheldFriendly" content="true">
        {% block stylesheets %}{% endblock %}
        {% stylesheets
        	'@CMSAdminBundle/Resources/public/css/bootstrap.min.css'
        	'@CMSAdminBundle/Resources/public/css/bootstrap-responsive.min.css'
            '@CMSAdminBundle/Resources/public/css/style.css'
            '@CMSDashboardBundle/Resources/public/css/jquery.fancybox.css' %}
    		<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="row-fluid">
    <div class="container">
        <div class="span6"><img src="{{ asset('bundles/cmsdashboard/images/logo2.png') }}" /></div>
        <div class="pull-right"></div>
        <div class="clearfix"></div>
        <div class="sep2"></div>
    </div>
    <div class="clearfix"></div>
    <div class="navbar navbar-static-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        {% if active is not defined %}
                            {% set active = 'Articles' %}
                        {% endif %}
                        {% if active == 'Dashboard' %}
                            <li class="active"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                        {% else %}
                            <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
                        {% endif %}
                        {% if active == 'Articles' %}
                            <li class="active"><a href="#">Articles</a></li>
                        {% else %}
                            <li><a href="#">Articles</a></li>
                        {% endif %}
                        <li><a href="#">Apparence</a></li>
                        {% if active == 'Medias' %}
                            <li class="active"><a href="{{ path("medias") }}">Medias</a></li>
                        {% else %}
                            <li><a href="{{ path("medias") }}">Medias</a></li>
                        {% endif %}

                        <li><a href="#">Commentaires</a></li>
                        {% if active == 'Utilisateurs' %}
                            <li class="active"><a href="{{ path('users') }}">Utilisateurs</a></li>
                        {% else %}
                            <li><a href="{{ path('users') }}">Utilisateurs</a></li>
                        {% endif %}

                    </ul>
                </div>
                <div class="visible-desktop">
                    <div class="pull-right">
                        <ul class="nav">
                            {% block views %}{% endblock views %}
                            <li><a href="#"><img src="{{ asset('bundles/cmsdashboard/images/mail.png') }}" width="20px" height="20px" /></a></li>
                            <li><a href="#"><img src="{{ asset('bundles/cmsdashboard/images/user.png') }}" width="20px" height="20px" /></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix sep2"></div>
<div class="row-fluid">
    <div class="container">

    	{% block body %}{% endblock %}
        	{% javascripts
        		'@CMSDashboardBundle/Resources/public/js/jquery-1.8.2.min.js'
        		'@CMSDashboardBundle/Resources/public/js/jquery-ui-1.9.1.custom.min.js'
        		'@CMSDashboardBundle/Resources/public/js/bootstrap.min.js'
        		'@CMSDashboardBundle/Resources/public/js/jquery.flot.js'
                '@CMSDashboardBundle/Resources/public/js/jquery.fancybox.pack.js'
                '@CMSDashboardBundle/Resources/public/js/dropzone.js'

        	 %}
		    	<script type="text/javascript" src="{{ asset_url }}"></script>
			{% endjavascripts %}
		{% block javascripts %}
        {% endblock %}
    </body>
</html>
