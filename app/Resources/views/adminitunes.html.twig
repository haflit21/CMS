<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Dashboard{% endblock %}</title>
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="HandheldFriendly" content="true">
        {% block stylesheets %}{% endblock %}
        {% stylesheets filter='less,?yui_css' output='css/main.css' debug=false
        	'@CMSAdminBundle/Resources/public/less/bootstrap.less'
            '@CMSAdminBundle/Resources/public/less/responsive.less'
            '@CMSAdminBundle/Resources/public/css/jquery-ui.css'
            '@CMSAdminBundle/Resources/public/css/jquery.selectboxit.css'
            '@CMSAdminBundle/Resources/public/css/style-linecons.css'
            '@CMSAdminBundle/Resources/public/less/style.less'
            '@CMSDashboardBundle/Resources/public/css/jquery.fancybox.css'
                
             %}
    		<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="admin">
        <div class="row-fluid" id="header">
            <div class="container">
                <div class="span6"><img src="{{ asset('bundles/cmsdashboard/images/logo2.png') }}" /></div>
                <div class="pull-right"></div>
                <div class="clearfix"></div>
                <div class="sep-header"></div>
            </div>
            <div class="clearfix"></div>
            <div class="navbar navbar-static-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <div class="nav-collapse">
                            {% render "CMSAdminBundle:Module:generateBloc" with {'position': "admin_menu_top", 'url_courante': app.request.attributes } %}
                        </div>
                        <div class="visible-desktop">
                            <div class="pull-right">
                                <ul class="nav">
                                    {% block views %}{% endblock views %}
                                    <li><a href="{{ path('contacts_list') }}"><img src="{{ asset('bundles/cmsdashboard/images/mail.png') }}" width="20px" height="20px" />{{ ' '|messagesContact|raw }}</a></li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="{{ asset('bundles/cmsdashboard/images/user.png') }}" width="20px" height="20px" /></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/fr/accueil.html" target="_blank">Voir le site</a></li>
                                            <li class="divider"></li>
                                            <li><a href="{{ path('logout') }}">Se d√©connecter</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="main">
            <div class="container">
                {% render "CMSAdminBundle:Module:generateBloc" with {'position': "admin_breadcrumb", 'url_courante': app.request.attributes.get('_route') } %}
                <div class="sep3"></div>
                <div class="row-fluid">
                {% block body %}{% endblock %}
                </div>
            </div>
        </div>        
    	{% javascripts 
    		'@CMSDashboardBundle/Resources/public/js/jquery-1.8.2.min.js'
    		'@CMSDashboardBundle/Resources/public/js/jquery-ui-1.9.1.custom.min.js'
    		'@CMSDashboardBundle/Resources/public/js/bootstrap.min.js'
            '@CMSDashboardBundle/Resources/public/js/jquery.fancybox.pack.js'
            '@CMSAdminBundle/Resources/public/js/jquery.tablesorter.min.js'
            '@CMSAdminBundle/Resources/public/js/jquery.selectBoxIt.min.js'
            '@CMSAdminBundle/Resources/public/js/jquery.knob.js'
    	 %}
	    	<script type="text/javascript" src="{{ asset_url }}"></script>
		{% endjavascripts %}
    	{% block javascripts %}	
        {% endblock %}
    </body>
</html>  